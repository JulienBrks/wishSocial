form(role="form")
  div(class="alert alert-warning", ng-show="alert.show", ng-bind="alert.text")
  .form-group
    label(for="exampleInputEmail1") 邮箱地址
    input(type="email", class="form-control", ng-model="registerForm.email", placeholder="输入邮箱")
  .form-group
    label(for="exampleInputEmail1") 用户昵称
    input(type="input", class="form-control", ng-model="registerForm.userName", placeholder="输入用户名")
  .form-group
    label(for="exampleInputPassword1") 密码
    input(type="password", class="form-control", ng-model="registerForm.password", placeholder="密码")
  .form-group
    label(for="exampleInputPassword1") 再次输入密码
    input(type="password", class="form-control", ng-model="registerForm.confirmPassword", placeholder="再次输入密码")
  button(class="btn btn-default", ng-click="register()") 提交